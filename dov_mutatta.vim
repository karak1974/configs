syntax enable
filetype indent on
set hidden
set wrap
set encoding=utf-8
set fileencoding=utf-8
set ruler
set cmdheight=2
set mouse=a
set splitbelow
set splitright
set smarttab
set number relativenumber
set background=dark

set laststatus=2
set statusline=%f "tail of the filename

let g:gitgutter_terminal_reports_focus=1

let g:python_highlight_all = 1
